<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/space_line2">

            <TextView
                android:id="@+id/user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_line"
                android:background="@drawable/ic_chat_right"
                android:gravity="center_vertical"
                android:padding="@dimen/space_line2"
                android:textSize="@dimen/sp_stander"
                android:layout_toLeftOf="@+id/user_icon"
                android:textColor="@color/black"
                android:text="test"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/qixqi" />


    </RelativeLayout>

</LinearLayout>